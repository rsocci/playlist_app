<h1>New Comment</h1>

<%= form_for @comment do |f| %>
	<% if @comment.errors.any? %>
		<h2>Errors:</h2>
		<ul>
			<% @comment.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
			<% end %>
		</ul>
	<% end %>

	<p>
		<%= f.label :content %><br>
		<%= f.text_area :content %>
	</p>
	
	<p><%= f.submit "Add" %></p>

<% end %>

<%= link_to "Back", playlists_path %>