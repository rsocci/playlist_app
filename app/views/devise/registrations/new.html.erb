<div class="page-header">
  <h1>Sign Up</h1>
</div>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field"><%= f.label :first_name %>
  <div class="fieldbox"><%= f.text_field :first_name, :autofocus => true %></div></div>

  <div class="field"><%= f.label :last_name %>
  <div class="fieldbox"><%= f.text_field :last_name %></div></div>

  <div class="field"><%= f.label :email %>
  <div class="fieldbox"><%= f.email_field :email %></div></div>

  <div class="field"><%= f.label :password %>
  <div class="fieldbox"><%= f.password_field :password %></div></div>

  <div class="field"><%= f.label :password_confirmation %>
  <div class="fieldbox"><%= f.password_field :password_confirmation %></div></div>

  <div><%= f.submit "Sign up", class: "btn" %></div>
<% end %>

<%= render "devise/shared/links" %>
